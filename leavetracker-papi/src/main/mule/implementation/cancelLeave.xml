			<http:uri-params><![CDATA[#[output application/json
---
{
	EmployeeID : vars.employeeID
}]]]></http:uri-params>
							<http:query-params ><![CDATA[#[%dw 2.0
output application/json
---
{
	fromDate : vars.fromDate,
	toDate : vars.toDate
}]]]></http:query-params>
		</http:request>
